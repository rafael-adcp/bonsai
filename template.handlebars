<!DOCTYPE HTML>
<html>

<head>
	<title>Bonsai</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<!-- bootstrap cdn -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


	<!-- bootstrap icons cdn -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>

<style>
	hr {
		border-top: solid 3px #41484c;
		margin: auto 3em;
	}
</style>

<body class="is-preload">
	<!-- Main -->
	<div id="main">

		<!-- Intro -->
		<section id="top" class="one dark cover">
			<div class="container">

				<header>
					
					<h2 class="alt"><strong>Activity Log of my plants</strong> <br /></h2>
					
				</header>
			</div>
		</section>
		
		<!-- Sumário -->
		<section id="sumario" class="one dark cover">
			<div class="container">
				<header>
					<h2>Sumário</h2>
				</header>
				{{#each data}}
					<li style="text-align: left;">
						<a href="#{{id}}" id="{{id}}-link"><span>{{Nome}}</span></a>
					</li>
				{{/each}}
			</div>
		</section>

		<br/><br/>
		{{#each data}}
		<hr/>
		<section id="{{id}}">
			
			<div class="container">
				<header>
					<h1>{{Nome}}</h1>
					{{#if data_aquisicao}}
					<p>Data aquisicao: {{data_aquisicao}} <br/>
					Valor: {{valor}}</p>
					{{/if}}
					
					{{#if idade}}
					</p>Idade: {{idade}}</p>
					{{/if}}
				</header>

				<p>
					<b>Registros:</b>
				</p>

                {{#each registros}}
                    <div class="row">
                        <div class="col-sm">
                            <header>
								<i class="bi bi-arrow-right-square-fill"> {{data}} - {{{descricao}}}</i>
                            </header>
                        </div>
				    </div>

                    {{#if fotos}}
                        <div class="row">
                            <div class="col-2"></div>
							<div class="col-8">
                                <header>
                                    <h3>Fotos:</h3>
                                </header>
                            </div>
							
                        </div>
				

                        <div class="row d-flex justify-content-center">
                            {{#each fotos}}
                                <div class="col-4"></div>
								<div class="col-8">
                                    <article class="item">
                                        <a href="{{image_path}}" class="image fit"><img src="{{image_path}}" alt="" style="width: 200px; height: 200px"/></a>
                                        <header>
                                            <p>{{descricao}}</p>
                                        </header>
                                    </article>
                                </div>
                            {{/each}}
                        </div>
                    {{/if}}

					 {{#if videos}}
                        <div class="row">
                            <div class="col-2"></div>
							<div class="col-8">
                                <header>
                                    <h3>Videos:</h3>
                                </header>
                            </div>
							
                        </div>
				

                        <div class="row d-flex justify-content-center">
                            {{#each videos}}
                                <div class="col-4"></div>
								<div class="col-8">
                                    <article class="item">
                                        <a href="{{video_path}}" class="image fit">
											<video src="{{video_path}}" alt="" style="width: 200px; height: 200px"/>
										</a>
                                        <header>
                                            <p>{{descricao}}</p>
                                        </header>
                                    </article>
                                </div>
                            {{/each}}
                        </div>
                    {{/if}}
                {{/each}}

			</div>
		</section>
		<br/><br/>
		{{/each}}
	</div>

	<!-- Footer -->
	<div id="footer">

		<!-- Copyright -->
		

	</div>
</body>

</html>